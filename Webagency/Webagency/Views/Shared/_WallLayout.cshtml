
@using Webagency.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Press Agendy System</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/sidebar.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @if (Session["UserID"] != null)
                {
                    <button type="button" class="btn btn-default" id="profile" onclick="view()">@(((user)Session["user"]).userName.ToString())</button>
                }

                @Html.ActionLink("Press Agency", "Index1", "Wall", new { area = "" }, new { @class = "navbar-brand" })


            </div>


            <form class="navbar-form navbar-left" id="filter">
                <button type="button" class="btn btn-default" id="btnsearch" value="Submit">Filter</button>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search" id="InSearch">
                </div>

            </form>



            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav " style="float:right !important">

                    <li>@Html.ActionLink("Wall", "Index1", "Wall")</li>

                    @if (Session["user"] == null)
                    {
                        <li>@Html.ActionLink("Register", "Register", "Wall")</li>
                        <li>@Html.ActionLink("Login", "Login", "Wall")</li>
                    }
                    else
                    {
                        <li><p style="color:white; margin-top:15px">Hello @Session["UserName"]</p></li>
                        <li>@Html.ActionLink("Logout", "Logout", "Wall")</li>
                       
                    }


                </ul>
            </div>



        </div>
    </div>









    <div class="container body-content">
        @if (Session["user"] != null)
        {
            <div id="Profile" class="container side display_none">
                <ul class="list-group">
                    <li class="list-group-item" style="background-color:#FADBD8 ">
                        @Html.ActionLink("Profile", "ViewProfile", new { id = int.Parse(((user)Session["user"]).userID.ToString()) }, htmlAttributes: new { @class = "btn btn-secondary " })
                    </li>
                    <li class="list-group-item" style="background-color:#FADBD8 ">
                        @Html.ActionLink("Saved Postes", "savedposts", new { id = int.Parse(((user)Session["user"]).userID.ToString()) }, htmlAttributes: new { @class = "btn btn-secondary " })

                    </li>
                </ul>

            </div>

        }

        <div class="container" style="display:none" id="found">

        </div>
        <div class="container" style="display:none" id="notFound">
            not found
        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year /pressagencysystem</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#found").hide(0);
            close = function () {
                $("#Profile").hide(1500);
            }
            closes = function () {
                $("#found").hide(1500);
            }

            $("#btnsearch").click(function (e) {
                valdata = $("#InSearch").val();
                if (valdata != "") {
                    $.ajax({
                        type: "GET",
                        url: "/Wall/Filter",
                        data: { search: valdata },
                        success: function (resoponse) {


                            if (resoponse.result == 1) {
                                $("#found").show(1000);
                                resoponse.Atical.forEach(element => viewSearch(element.articleTitle, element.Id));


                            }
                            else {
                                $("#notFound").show(1000);
                            }
                        },
                    })
                }

            })
            view = function () {
                if ($("#Profile").hasClass("display_none")) {
                    $("#Profile").removeClass("display_none");
                    $("#Profile").show(1500);
                }
                else {
                    $("#Profile").addClass("display_none");
                    $("#Profile").hide(1500);
                }
            }
        })
        viewSearch = function (search,id) {

            var tag = document.createElement("a");
            tag.classList.add("btn");
            tag.classList.add("btn-default");
            tag.classList.add("btn-lg");
            tag.classList.add("btn-block");
            var text = document.createTextNode(search);


            tag.appendChild(text);
            tag.href = "/Wall/Show/" + id;
            var element = document.querySelector("#found");
            element.appendChild(tag);


        }
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>