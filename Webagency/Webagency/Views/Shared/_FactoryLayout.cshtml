@using Webagency.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Press Agendy System</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/sidebar.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>



                @Html.ActionLink("Press Agency", "Index", "Factory", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">


                    @if (Session["user"] == null)
                    {

                        <li>@Html.ActionLink("Login", "Login", "Wall")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Wall")</li>

                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            @if (Session["user"] != null)
            {
                <div id="Profile" class="container side col-lg-2 left" style="height:85%;">

                    <ul class="list-group">
                        <li class="list-group-item">
                            @Html.ActionLink("Profile", "ViewProfile", new { id = int.Parse(((user)Session["user"]).userID.ToString()) }, htmlAttributes: new { @class = "btn btn-secondary " })
                        </li>
                        <li class="list-group-item">
                            @Html.ActionLink("Create New Post", "CreatePost", new { id = int.Parse(((user)Session["user"]).userID.ToString()) }, htmlAttributes: new { @class = "btn btn-secondary " })

                        </li>
                        <li class="list-group-item">
                            @Html.ActionLink("My Postes", "MyPostes", new { id = int.Parse(((user)Session["user"]).userID.ToString()) }, htmlAttributes: new { @class = "btn btn-secondary " })

                        </li>
                        <li class="list-group-item">
                            @Html.ActionLink("Received questions", "Receivedquestions", new { id = int.Parse(((user)Session["user"]).userID.ToString()) }, htmlAttributes: new { @class = "btn btn-secondary " })

                        </li>
                    </ul>

                </div>

            }
            <div class="col-lg-8 right" style="margin-left:130px;min-height:80%">
                @RenderBody()

            </div>
        </div>
        <div class="row">
            <hr style="bottom:40px;" />
            <footer>
                <p>&copy; @DateTime.Now.Year /pressagencysystem</p>
            </footer>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/jqueryval")


    @RenderSection("scripts", required: false)

</body>
</html>
